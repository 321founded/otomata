[Unit]
Description=Otomata Django Webapp
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/otomata/app/webapp
Environment="PATH=/otomata/app/venv/bin:/usr/local/bin:/usr/bin:/bin"
EnvironmentFile=/otomata/app/.env
ExecStart=/otomata/app/venv/bin/gunicorn config.wsgi:application \
    --bind 127.0.0.1:8090 \
    --workers 2 \
    --threads 4 \
    --timeout 120 \
    --reload
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
